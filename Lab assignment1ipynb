        "def factorial_iterative(n):\n",
        "    if n < 0:\n",
        "        return None\n",
        "    fact = 1\n",
        "    for i in range(2, n+1):\n",
        "        fact *= i\n",
        "    return fact\n",
        "num = 5\n",
        "print(\"\\n--- Iterative Factorial ---\")\n",
        "print(\"Answer:\", factorial_iterative(num))"
